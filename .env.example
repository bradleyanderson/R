# ResolveAI Environment Configuration
# Copy this file to .env and fill in your values

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
REDIS_PASSWORD=your-redis-password-here
POSTGRES_PASSWORD=your-postgres-password-here
GRAFANA_PASSWORD=your-grafana-password-here

# Cloud Configuration (AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=resolveai-storage-bucket
AWS_REGION=us-west-2

# Cloud Configuration (Google Cloud)
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_SERVICE_ACCOUNT_KEY=path/to/service-account.json
# GCP_BUCKET_NAME=resolveai-storage-bucket

# Cloud Configuration (Azure)
# AZURE_ACCOUNT_NAME=your-azure-account-name
# AZURE_ACCOUNT_KEY=your-azure-account-key
# AZURE_CONTAINER_NAME=resolveai-storage

# Application Settings
RESOLVEAI_LOG_LEVEL=INFO
RESOLVEAI_MAX_RESOLUTION=4K
RESOLVEAI_MAX_FILE_SIZE_MB=2048
RESOLVEAI_GPU_ACCELERATION=true
RESOLVEAI_SAMPLE_RATE=48000
RESOLVEAI_WHISPER_MODEL=base

# DaVinci Resolve Integration
RESOLVEAI_PLUGIN_PORT=8080
RESOLVEAI_AUTO_CONNECT=true
RESOLVEAI_SYNC_FREQUENCY=1.0

# Database (if using external database)
# DATABASE_URL=postgresql://resolveai:password@localhost:5432/resolveai

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Development
DEBUG=false
ENVIRONMENT=production